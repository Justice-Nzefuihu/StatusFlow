# ---------- Base Image ----------
FROM python:3.11-slim

# ---------- Working Directory ----------
WORKDIR /app

# ---------- Copy Files ----------
COPY . /app
COPY requirement.txt ./

# ---------- Install Dependencies ----------
RUN pip install --no-cache-dir -r requirements.txt

# ---------- celery (used by Render) ----------
CMD celery -A app.celery_worker worker --loglevel=info --concurrency=2 && celery -A app.celery_worker beat --loglevel=info
